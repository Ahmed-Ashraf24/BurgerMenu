<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Food Image Container -->

        <!-- Food Name -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp">

            <!-- Golden Circle Background -->
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/gold_circle_bg" />

            <!-- Food Image -->
            <ImageView
                android:id="@+id/iv_food_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:contentDescription="Food Image"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_burger" />

            <!-- Circular Logo Container -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/logo_circle_bg"> <!-- Circular background for the logo -->

                <!-- Burger King Logo -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:contentDescription="Burger King Logo"
                    android:src="@drawable/burger_king_logo" />

            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Double Whopper"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Price and Quantity Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Price -->
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="29.57 S..."
                android:textColor="#4A90E2"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Minus Button -->
                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/quantity_button_bg"
                    android:padding="6dp"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Decrease quantity" />

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Plus Button -->
                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/quantity_button_bg"
                    android:padding="6dp"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Increase quantity" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>